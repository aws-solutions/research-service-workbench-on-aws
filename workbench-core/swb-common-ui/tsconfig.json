{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@rushstack/heft-node-rig/profiles/default/tsconfig-base.json",
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "sourceRoot": "src",
    "jsx": "preserve",
    "types": [
      "heft-jest",
      "node"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
