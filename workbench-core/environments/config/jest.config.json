{
  "extends": "@rushstack/heft-node-rig/profiles/default/config/jest.config.json",
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/hostingAccountService.ts",
    "<rootDir>/src/environmentConnectionService.ts",
    "<rootDir>/src/environmentLifecycleService.ts",
    "<rootDir>/src/eventBridgeEventToDDB.ts",
    "<rootDir>/src/environmentStatus.ts",
    "<rootDir>/src/accountHandler.ts",
    "<rootDir>/src/index.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "coverageReporters": ["json-summary", "json"]
}
