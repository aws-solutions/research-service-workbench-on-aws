{
  "extends": "@rushstack/heft-node-rig/profiles/default/config/jest.config.json",
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/constants/hostingAccountStatus.ts",
    "<rootDir>/src/handlers/accountHandler.ts",
    "<rootDir>/src/schemas/createAccount.ts",
    "<rootDir>/src/services/hostingAccountService.ts",
    "<rootDir>/src/index.ts",
    "<rootDir>/src/models/accounts/createAccountRequest.ts",
    "<rootDir>/src/models/accounts/updateAccountRequest.ts",
    "<rootDir>/src/models/accounts/getAccountRequest.ts",
    "<rootDir>/src/models/accounts/awsAccountTemplateUrlsRequest.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "coverageReporters": ["json-summary", "json", "lcov", "text"]
}
