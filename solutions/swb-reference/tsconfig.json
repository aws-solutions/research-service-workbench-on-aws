{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "lib",
    "types": ["heft-jest", "node"],
    "lib": ["es2017", "dom"],
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "allowUnreachableCode": false,
    "module": "commonjs",
    "target": "es2017",
    "rootDirs": ["src", "integration-tests"]
  },
  "include": ["src/**/*.ts", "integration-tests/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
