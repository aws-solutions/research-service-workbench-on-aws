{
  "name": "@aws/swb-ui-infrastructure",
  "version": "0.0.1",
  "description": "CDK project for deploying swb-ui as a static site with S3 Bucket and CloudFront..",
  "homepage": "https://github.com/awslabs/solution-spark-on-aws",
  "repository": {
    "type": "git",
    "url": "https://github.com/awslabs/solution-spark-on-aws.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Amazon Web Services",
    "url": "http://aws.amazon.com"
  },
  "bin": {
    "cdk-infrastructure": "bin/cdk-infrastructure.js"
  },
  "scripts": {
    "add-license-header": "license-check-and-add add -f license-add-config.json",
    "build": "heft build --clean",
    "build:test": "rushx build && rushx test",
    "cdk": "cdk",
    "cdk-deploy": "rushx build && cdk deploy --all --require-approval never --outputs-file ./src/config/${STAGE}.json",
    "check-license-header": "license-check-and-add check -f license-add-config.json",
    "license-checker": "license-checker --onlyAllow 'MIT; Apache-2.0; ISC; BSD'",
    "sort-package-json": "sort-package-json package.json",
    "test": "rushx test:only",
    "test:only": "heft test --clean --no-build",
    "watch": "tsc -w"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@rushstack/heft": "^0.48.7",
    "@rushstack/heft-jest-plugin": "^0.3.28",
    "@rushstack/heft-node-rig": "^1.10.5",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^14",
    "@types/prettier": "2.6.3",
    "aws-cdk": "^2.12.0",
    "aws-cdk-lib": "^2.29.1",
    "constructs": "^10.0.0",
    "jest": "^27.5.1",
    "license-check-and-add": "^4.0.5",
    "license-checker": "^25.0.1",
    "sort-package-json": "^1.57.0",
    "source-map-support": "^0.5.16",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
